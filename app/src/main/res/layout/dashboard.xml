<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.aoma.DashboardActivity">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true">

     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:orientation="vertical">

         <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="230dp"
                 android:orientation="vertical"
                 android:gravity="center">

                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_marginTop="10dp"
                     android:fontFamily="@font/fanwood_text"
                     android:text="Asset Opname
                     Mobile Apps"
                     android:textAlignment="center"
                     android:textColor="@color/black"
                     android:textSize="40dp" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_marginTop="215dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    >

             <androidx.cardview.widget.CardView
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:gravity="center"
                 android:orientation="vertical" >

                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="match_parent" >

                     <ImageView
                         android:layout_width="50dp"
                         android:id="@+id/imageView1"
                         android:layout_height="50dp"
                         android:src="@drawable/settings"
                         android:layout_centerInParent="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Settings"
                        android:textSize="16dp"
                        android:layout_below="@id/imageView1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                     <Button
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:id="@+id/buttonSet"
                         android:background="@android:color/transparent"
                         />

                 </RelativeLayout>
             </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="50dp"
                android:id="@+id/imageView2"
                android:layout_height="50dp"
                android:src="@drawable/folder"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master Data"
                android:textSize="16dp"
                android:layout_below="@id/imageView2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonMr"
                android:background="@android:color/transparent"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="135dp"
                     android:orientation="horizontal"
                     android:layout_marginBottom="10dp"
                     >

                     <androidx.cardview.widget.CardView
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:orientation="vertical" >

                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent" >

                             <ImageView
                                 android:layout_width="50dp"
                                 android:id="@+id/imageView3"
                                 android:layout_height="50dp"
                                 android:src="@drawable/qrcode"
                                 android:layout_centerInParent="true"/>
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Scan QR"
                                 android:textSize="16dp"
                                 android:layout_below="@id/imageView3"
                                 android:layout_centerHorizontal="true"
                                 android:layout_marginTop="10dp"
                                 android:layout_marginBottom="10dp"/>
                             <Button
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:id="@+id/buttonQr"
                                 android:background="@android:color/transparent"
                                 />

                         </RelativeLayout>
                     </androidx.cardview.widget.CardView>
                     <androidx.cardview.widget.CardView
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:layout_marginLeft="5dp"
                         android:orientation="vertical" >

                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent" >

                             <ImageView
                                 android:layout_width="50dp"
                                 android:id="@+id/imageView4"
                                 android:layout_height="50dp"
                                 android:src="@drawable/analysis"
                                 android:layout_centerInParent="true"/>
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="View Result"
                                 android:textSize="16dp"
                                 android:layout_below="@id/imageView4"
                                 android:layout_centerHorizontal="true"
                                 android:layout_marginTop="10dp"
                                 android:layout_marginBottom="10dp"/>
                             <Button
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:id="@+id/buttonAn"
                                 android:background="@android:color/transparent"
                                 />

                         </RelativeLayout>
                     </androidx.cardview.widget.CardView>




                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="135dp"
                     android:orientation="horizontal"
                     android:layout_marginBottom="10dp"
                     android:layout_gravity="center"

                     >

                     <androidx.cardview.widget.CardView
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:orientation="vertical" >

                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent" >

                             <ImageView
                                 android:layout_width="50dp"
                                 android:id="@+id/imagePdf3"
                                 android:layout_height="50dp"
                                 android:src="@drawable/document"
                                 android:layout_centerInParent="true"/>
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Policy"
                                 android:textSize="16dp"
                                 android:layout_below="@id/imagePdf3"
                                 android:layout_centerHorizontal="true"
                                 android:layout_marginTop="10dp"
                                 android:layout_marginBottom="10dp"/>
                             <Button
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:id="@+id/buttonpdf"
                                 android:background="@android:color/transparent"
                                 />

                         </RelativeLayout>
                     </androidx.cardview.widget.CardView>


                     <androidx.cardview.widget.CardView
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight="1"
                         android:gravity="center"
                         android:orientation="vertical"
                         android:layout_marginLeft="5dp"
                         >

                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="match_parent" >

                             <ImageView
                                 android:layout_width="50dp"
                                 android:id="@+id/imagePA"
                                 android:layout_height="50dp"
                                 android:src="@drawable/forklift"
                                 android:layout_centerInParent="true"/>
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:text="Asset Profile"
                                 android:textSize="16dp"
                                 android:layout_below="@id/imagePA"
                                 android:layout_centerHorizontal="true"
                                 android:layout_marginTop="10dp"
                                 android:layout_marginBottom="10dp"/>
                             <Button
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:id="@+id/buttonPA"
                                 android:background="@android:color/transparent"
                                 />

                         </RelativeLayout>
                     </androidx.cardview.widget.CardView>

                 </LinearLayout>

                 <Button
                     android:layout_width="match_parent"
                     android:id="@+id/logout"
                     android:layout_height="match_parent"
                     android:text="Logout"
                     android:textColor="#ffff"
                     android:background="@color/colorPrimaryDark"
                     android:layout_marginTop="50dp"
                     />

                 <TextView
                     android:layout_width="100dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="left"
                     android:layout_marginTop="75dp"
                     android:text="AOMA V 1.0"
                     android:textColor="@color/colorPrimary" />

                 <ImageView
                     android:layout_width="74dp"
                     android:layout_height="144dp"
                     android:layout_gravity="right"
                     android:layout_marginTop="-80dp"
                     android:src="@drawable/logoymi" />

             </LinearLayout>
         </RelativeLayout>
     </LinearLayout>


</ScrollView>

</RelativeLayout>