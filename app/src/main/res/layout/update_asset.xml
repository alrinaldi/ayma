<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.aoma.UpdateAssetActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_photo_camera_black_24dp"
        />
    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/input_nomor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor"
        android:textSize="16sp"
        app:met_floatingLabel="highlight" />

    <EditText
        android:id="@+id/input_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="deskripsi"
        android:textSize="16sp"
         />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/input_wct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Workcenter"
        android:textSize="16sp"
        app:met_floatingLabel="highlight"
        />

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Condition"
        android:textSize="16sp"
        />

    <RadioGroup
        android:id="@+id/opsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/ug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Use Good" />

        <RadioButton
            android:id="@+id/mt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Maintenance" />

        <RadioButton
            android:id="@+id/nug"
            android:layout_width="200dp"
            android:layout_marginTop="-62dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Not Use Good" />
        <RadioButton
            android:id="@+id/nup"
            android:layout_width="200dp"
            android:layout_marginTop="-0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Not Use Poor" />

    </RadioGroup>


    <View
        android:layout_width="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:layout_height="2dp"
        android:background="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Label"
        android:textSize="16sp"
        />

    <RadioGroup
        android:id="@+id/opsil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/lok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="OK" />

        <RadioButton
            android:id="@+id/nok"
            android:layout_width="150dp"
            android:layout_marginTop="-30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Not Ok" />

    </RadioGroup>
            <View
                android:layout_width="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_height="2dp"
                android:background="@color/black"/>
    <Button
        android:id="@+id/tkpicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#000066"
        android:textColor="#fff"
        android:textStyle="bold"
        android:text="Take Picture"
        />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="-5dp"
                android:text="Picture Before" />

            <TextView
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="-14dp"
                android:text="Picture After" />
            <ImageView

        android:id="@+id/fotolm"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_gravity="left"
        />

            <ImageView
                android:id="@+id/fotobr"
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:layout_gravity="right"
                android:layout_marginTop="-149dp" />


            <Button
                android:layout_marginTop="5dp"
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textAllCaps="true"
                android:background="#000066"
                android:textColor="#fff"
                android:textStyle="bold"
        android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>